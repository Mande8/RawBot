include "m8c.inc"


;--------------------------------------------------
; Constants for ServoPWM API's.
;--------------------------------------------------

ServoPWM_CONTROL_REG_START_BIT:            equ 0x01    ; Control register start bit
ServoPWM_INT_REG:                          equ 0x0e1
ServoPWM_INT_MASK:                         equ 0x20


;--------------------------------------------------
; Constants for ServoPWM user defined values
;--------------------------------------------------

ServoPWM_PERIOD:                           equ 0xf9f
ServoPWM_PULSE_WIDTH:                      equ 0x12c


;--------------------------------------------------
; Register Address Constants for ServoPWM
;--------------------------------------------------

ServoPWM_COUNTER_LSB_REG:              equ 0x30   ; DR0 Count register
ServoPWM_COUNTER_MSB_REG:              equ 0x34
ServoPWM_PERIOD_LSB_REG:               equ 0x31   ; DR1 Period register
ServoPWM_PERIOD_MSB_REG:               equ 0x35
ServoPWM_COMPARE_LSB_REG:              equ 0x32   ; DR2 Compare register
ServoPWM_COMPARE_MSB_REG:              equ 0x36
ServoPWM_CONTROL_LSB_REG:              equ 0x33   ; Control register
ServoPWM_CONTROL_MSB_REG:              equ 0x37
ServoPWM_FUNC_LSB_REG:                 equ 0x30   ; Function register
ServoPWM_FUNC_MSB_REG:                 equ 0x34
ServoPWM_INPUT_LSB_REG:                equ 0x31   ; Input register
ServoPWM_INPUT_MSB_REG:                equ 0x35
ServoPWM_OUTPUT_LSB_REG:               equ 0x32   ; Output register
ServoPWM_OUTPUT_MSB_REG:               equ 0x36


;--------------------------------------------------
; ServoPWM Macro 'Functions'
;--------------------------------------------------

   macro ServoPWM_Start_M
   or    reg[ServoPWM_CONTROL_LSB_REG],  ServoPWM_CONTROL_REG_START_BIT
   endm

   macro ServoPWM_Stop_M
   and   reg[ServoPWM_CONTROL_LSB_REG], ~ServoPWM_CONTROL_REG_START_BIT
   endm

   macro ServoPWM_EnableInt_M
   M8C_EnableIntMask ServoPWM_INT_REG, ServoPWM_INT_MASK
   endm

   macro ServoPWM_DisableInt_M
   M8C_DisableIntMask ServoPWM_INT_REG, ServoPWM_INT_MASK
   endm


